<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <ch.epfl.sweng.smartTabs.gfx.HeaderView
        android:id="@+id/headerView"
        android:layout_width="fill_parent" 
		android:layout_height="0dp" 
		android:layout_weight="@integer/headerRatio" />
	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/bodyRatio"
        android:orientation="vertical" >
    	
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="@integer/musicWraperRatio"
	        android:orientation="vertical" >
	        
		    <ch.epfl.sweng.smartTabs.gfx.MusicSheetView
		        android:id="@+id/musicSheetView"
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_weight="@integer/musicSheetRatio" />
		    
		    <ch.epfl.sweng.smartTabs.gfx.TablatureView
		        android:id="@+id/tablatureView"
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_weight="@integer/tablatureRatio" />

		</LinearLayout>
		
		<ch.epfl.sweng.smartTabs.gfx.FooterView
	        android:id="@+id/footerView"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="@integer/footerRatio" />
		
    </LinearLayout>
    
</LinearLayout>
